apiVersion: v1
kind: ReplicationController
metadata:
  name: mysql
  labels:
    name: mysql
  namespace: harbor
spec:
  replicas: 1
  selector:
    name: mysql
  template:
    metadata:
      labels:
        name: mysql
    spec:
      containers:
      - name: mysql
        image: rivernet/harbor-mysql:20170626
        imagePullPolicy: Always
        ports:
        - containerPort: 3306
        env:
          - name: MYSQL_ROOT_PASSWORD
            value: root123
        volumeMounts:
        - name: mysql-storage
          mountPath: /var/lib/mysql
      volumes:
      - name: mysql-storage
        emptyDir: {}
      nodeSelector:
        harbor: "yes"
