apiVersion: v1
kind: ReplicationController
metadata:
  name: firmament-mysql
  namespace: {{ ecp_namespace }}
  labels:
    app: firmament-mysql
spec:
  replicas: 1
  selector:
    app: firmament-mysql
  template:
    metadata:
      labels:
        app: firmament-mysql
    spec:
      containers:
      - image: {{ mysql_image }}
        imagePullPolicy: IfNotPresent
        name: mysql
        env:
          # $ kubectl create secret generic mysql-pass --from-file=password.txt
          # make sure password.txt does not have a trailing newline
        - name: MYSQL_ROOT_PWD
          value: password
        - name: MYSQL_USER_DB
          value: keystone
        - name: MYSQL_USER
          value: keystone
        - name: MYSQL_USER_PWD
          value: password 
        ports:
        - containerPort: 3306
          name: mysql
        volumeMounts:
        - name: mysql-persistent-storage
          mountPath: /var/lib/mysql/firmament
      volumes:
      - name: mysql-persistent-storage
        hostPath:
          path: /var/lib/mysql
      nodeSelector:
        mysql: "yes"
