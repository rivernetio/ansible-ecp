# exposing hybridjob as a service
apiVersion: v1
kind: Service
metadata:
  labels:
    app: hybridjob-controller
    type: api
  name: hybridjob
  namespace: kube-system
spec:
  ports:
  - name: api
    port: 8080
    protocol: TCP
    targetPort: 8080
  selector:
    app: hybridjob-controller
    type: api
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  labels:
    app: hybridjob-controller
    type: api
  name: hybridjob-controller
  namespace: kube-system
spec:
  replicas: 1
  selector:
    matchLabels:
      app: hybridjob-controller
      type: api
  template:
    metadata:
      labels:
        app: hybridjob-controller
        type: api
      name: hybridjob-controller
    spec:
      nodeSelector:
        management: "yes"
      serviceAccountName: hybridjob
      containers:
      - name: hybridjob-controller
        image: {{ hybridjob_image }}
        args:
        - -v=2
        - -logtostderr=true
        ports:
        - containerPort: 8080
          name: api
          protocol: TCP
