apiVersion: v1
kind: Service
metadata:
  name: elasticsearch-logging
  namespace: {{ ecp_namespace }}
  labels:
    app: elasticsearch-logging
spec:
  ports:
  - port: 9200
    protocol: TCP
    targetPort: 9200
  selector:
    app: elasticsearch-logging
  type: NodePort
---
apiVersion: v1
kind: ReplicationController
metadata:
  name: elasticsearch-logging-v1
  namespace: {{ ecp_namespace }}
  labels:
    app: elasticsearch-logging
spec:
  replicas: 1
  selector:
    app: elasticsearch-logging
  template:
    metadata:
      labels:
        app: elasticsearch-logging
    spec:
      containers:
      - image: {{ elasticsearch_image }}
        imagePullPolicy: Always
        name: elasticsearch-logging
        env:
        - name: ES_MIN_MEM
          value: 1g
        - name: ES_MAX_MEM
          value: 4g      
        resources:
          # keep request = limit to keep this container in guaranteed class
          limits:
            cpu: 4000m
            memory: 4096Mi
          requests:
            cpu: 400m
            memory: 400Mi
        ports:
        - containerPort: 9200
          protocol: TCP
        volumeMounts:
        - name: es-persistent-storage
          mountPath: /usr/share/elasticsearch/data
      volumes:
      - hostPath:
          path: /opt/es_data
        name: es-persistent-storage
